<section class="contenido">



  <div
    id="carouselExampleIndicators"
    class="carousel slide"
    data-ride="carousel"
  >
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleIndicators"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <a href="/products"><img
          class="d-block w-100"
          src="/images/products/imagen-slide/AdidasSL20.png"
          alt="First slide"
        /></a>
      </div>
      <div class="carousel-item">
       <a href="/products"> <img
          class="fotos d-block w-100"
          src="/images/products/imagen-slide/dia-del-padre-sd-2020-1600x300.jpg"
          alt="Second slide"
        /></a>
      </div>
      <div class="carousel-item">
       <a href="/products"> <img
          class="fotos d-block w-100"
          src="/images/products/imagen-slide/zapatillas-nike-zoom.jpg"
          alt="Third slide"
        /></a>
      </div>
      <div class="carousel-item">
        <a href="/products"><img
          class="fotos d-block w-100"
          src="/images/products/imagen-slide/ofertas_y_envio_web_-_quedate.png"
          alt="Third slide"
        /></a>
      </div>
      <div class="carousel-item">
       <a href="/products"> <img
          class="fotos d-block w-100"
          src="/images/products/imagen-slide/ahora12-cuotas-diciembre-2019-1600x300.jpg"
          alt="Third slide"
        /></a>
      </div>
      <a
        class="carousel-control-prev"
        href="#carouselExampleIndicators"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#carouselExampleIndicators"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>

